        border-right 5px solid transparent
        border-bottom 5px solid #404040

    & > .ToolTip > div.lt > div
        left 2px
        top -5px
        border-top 5px solid transparent
        border-bottom 5px solid transparent
        border-right 5px solid #404040

    & > .ToolTip > div.rt > div
        right 2px
        top -5px
        border-top 5px solid transparent
        border-bottom 5px solid transparent
        border-left 5px solid #404040


