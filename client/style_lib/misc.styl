#canvas_container
    width 100%
    height 100%
    margin 0 auto
    overflow hidden
    background-color #808080
    
    & > #canvas
        visibility hidden
        width 100%
        height 100%
        margin 0 auto
        background #ffffff

    & > .ToolTip
        position absolute
        display block !important
        background #404040 !important
        border 1px solid white
        border-radius 6px
        color white
        padding 3px 9px
        font-size small
        white-space nowrap
        z-index 20000000
        pointer-events none

    & > .ToolTip > div
        position absolute
        width 0
        height 0

    & > .ToolTip > div.dn
        bottom -7px
        border-left 7px solid transparent
        border-right 7px solid transparent
        border-top 7px solid white

    & > .ToolTip > div.up
        top -7px
        border-left 7px solid transparent
        border-right 7px solid transparent
        border-bottom 7px solid white

    & > .ToolTip > div.lt
        left -7px
        top 4px
        border-top 7px solid transparent
        border-bottom 7px solid transparent
        border-right 7px solid white

    & > .ToolTip > div.rt
        right -7px
        top 4px
        border-top 7px solid transparent
        border-bottom 7px solid transparent
        border-left 7px solid white

    & > .ToolTip > div > div
        position absolute
        width 0
        height 0

    & > .ToolTip > div.dn > div
        left -5px
        top -7px
