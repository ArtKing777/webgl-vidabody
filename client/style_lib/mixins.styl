button_style(bcolor = false, hcolor = false, ico = false)
    if ico
        background ico 10px center no-repeat
        if bcolor
            background-color bcolor
        background-size 16px
        padding-left 35px
        text-align left
    else
        if bcolor
            background-color bcolor
    &:hover
        if hcolor
            background-color hcolor
        else
            if bcolor
                background-color lighten(bcolor, 30%)
        
