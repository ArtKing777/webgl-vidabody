
bg-linear-gradient()
    background-color unquote('-webkit-linear-gradient('+ join(', ', arguments) +')')
    background-color unquote('-moz-linear-gradient('+ join(', ', arguments) +')')
    background-color unquote('-ms-linear-gradient('+ join(', ', arguments) +')')
    background-color unquote('-o-linear-gradient('+ join(', ', arguments) +')')
    background-color unquote('linear-gradient('+ join(', ', arguments) +')')

blur()
    unquote('-webkit-filter: blur(' + arguments + ');')
    unquote('-moz-filter: blur(' + arguments + ');')
    unquote('-o-filter: blur(' + arguments+ ');')
    unquote('-ms-filter: blur(' + arguments + ');')
    unquote('filter: blur(' + arguments +');')

-transition()
    -webkit-transition arguments
    -moz-transition arguments
    -ms-transition arguments
    -o-transition arguments
    transition arguments

-transform()
    -webkit-transform arguments
    -moz-transform arguments
    -ms-transform arguments
    -o-transform arguments
    transform arguments
    
box-shadow()
    -webkit-box-shadow arguments
    -moz-box-shadow arguments
    box-shadow arguments

    
