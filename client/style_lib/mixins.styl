border3d(t, bt = true, bb = true, w = 1px, invert = false)
    if invert
        if bt
            border-top inset rgba(0,0,0,t) w
        if bb
            border-bottom inset rgba(255,255,255,t) w
    else
        if bt
            border-top inset rgba(255,255,255,t) w
        if bb
            border-bottom inset rgba(0,0,0,t) w

transition-props(duration, props)
    transition-property props
    transition-duration duration
