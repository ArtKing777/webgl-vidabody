#tours .panel-button
    display flex
    justify-content space-between

    & .buttons
        width 40px
        height 16px
        white-space nowrap

        & div
            display none
            width 16px
            height 16px
            background-image url(tour_buttons.png)
            background-size cover
            opacity 0.5

            &:hover
                opacity 1

.expanded
    #new_tour
        display inline-block !important
        background-position 0% 50%
        margin-right 6px

    #new_folder
        display inline-block !important
        background-position -16px 50%
    
        
        
#tour-tree-container
    overflow-y auto


    
.dragonfly-file-tree
    color white
    margin-left 0px
    text-indent 0px
    padding 0px 4px 10px 4px
    height auto
    min-height 100px

    word-wrap break-word
    & li
        height auto //resets style from accordions
        margin 0
        transition-props 0.5s background-color
        list-style-type none
        border-radius r

    
    ul
        padding 5px 5px 5px 5px
        margin 0 
        overflow hidden
        transition-props 0.5s (background-color height)
        background rgba(0,0,0,0.2)
        box-shadow inset-soft-shadow
        border-radius r
        inversed-border3d(0.3)

    li.closed > ul
        height 0 !important
        padding 0 5px 0 5px !important
        border-top solid rgba(0,0,0,0) 0px
        border-bottom solid rgba(255,255,255,0) 0px
        box-shadow inset 0px 0px 0px rgba(0,0,0,0)
        background rgba(0,0,0,0)
        
@media screen and (min-width: 1600px)
    .file label
        font-size 15px
@media screen and (max-width: 1600px)
    .file label
        font-size 12px
@media screen and (max-height: 700px)
    .file label
        font-size 12px
.file
    padding 0 0 0 32px
    cursor pointer
    display flex
    justify-content space-between
    width 100%
    height 100%
    position relative
    border-radius r
    
    &.selected
        background-color selected
    
    .actions
        width 60px
        height 16px
        display inline-block
        margin-top 8px
        opacity 0
        white-space nowrap

        action
            display inline-block
            width 16px
            height 16px
            background-image url(pencil.png)
            background-size cover
            opacity 0.5

            &:hover
                opacity 1

        .play
            background-position 0% 50%
            margin-right 6px

        .edit
            background-position -16px 50%
            margin-right 6px

        .menu
            background-position -32px 50%

    &:hover .actions
        opacity 1

    &.folder .actions
        width 16px


    & label
        //font-weight 400
        cursor pointer
        display inline-block
        padding 10px 0

        
.dragonfly-file-tree
    .playing
        background-color highlight-color
        padding-left 0px
        box-shadow soft-shadow
        border3d 0.5
        
    .editing
        background-color highlight-color
        padding-left 0px
        box-shadow soft-shadow
        border3d 0.5

    .closed > .folder
        background url(closed_folder.svg) left center no-repeat 

    .empty > .folder
        background url(empty_folder.svg) center left no-repeat
        
        
.tour
    background url(slide_test.png) 5px center no-repeat
    background-size: 20px

.folder
    background url(opened_folder.svg) center left no-repeat 

.renaming
    background text-input-color
    color white
    border 1px solid black
    border-radius r
    padding-left 5px !important
    padding-right 5px !important
    //margin -3px
    width 100%
    min-width 50px
    box-shadow inset 1px 1px 5px 0px rgba(50, 50, 50, 0.75);
    cursor  text !important
        

        
    
