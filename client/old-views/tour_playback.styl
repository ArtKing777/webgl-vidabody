

#audio
    font-size 0
    height 32px
    
    & *
        position relative
        display inline-block
        margin 0
        
    & #audio_icon
        width 32px
        height 32px
        background #F1F

    & #audio_bar
        width 236px
        *
            position absolute
            height 16px
            width 100%
            bottom 8px
        
        #playback_bar
            background rgba(47, 131, 199, 0.5)
            cursor pointer

        #playback_progress
            background rgba(47, 131, 199, 1)
            width 33%
        
        #audio_mouse_sensor
            position absolute
            top -1000000px
            left -1000000px
            width 0
            height 0
            z-index 10000000000
            &.expanded
                width 10000000px
                height 10000000px
                //background red

    & #play_pause_audio
        width 32px
        height 32px
        cursor pointer

    &.disabled
        opacity 0
        pointer-events none

.play_pause
    > *
        width 100%
        height 100%
        display inline-block
        transition-props 0.5s (width opacity)

    .pause
        width 100% !important
        opacity 1
    .play
        width 0 !important
        opacity 0
    &.paused
        .pause
            width 0 !important
            opacity 0
        .play
            width 100% !important
            opacity 1
        
#back
    -transform scale(-1,1)


.play_pause >.disabled
    opacity 0



#reading-handle
    height 100%
    width 30px !important
    background url(reader_panel_handles.svg) center no-repeat
    position absolute
    top 0
    left -30px
    cursor pointer

#reading-header
    height 75px !important
    min-height 75px !important
    padding 15px 20px 0px 20px
    color #333
    font-size 20px

#reading-panel
    display none
    position absolute
    right -webkit-calc( -25% + 20px)
    right calc( -25% + 20px)
    bottom 0
    width 25%
    height -webkit-calc( 100% - 65px )
    height calc( 100% - 65px )
    background-color #fff
    border-top 1px inset rgba(255, 255, 255, 0.5)
    box-shadow 0px 0px 20px rgba(0, 0, 0, 0.5)
    -webkit-border-top-left-radius 5px
    -moz-border-radius-topleft 5px
    border-top-left-radius 5px
    transition-props 0.4s right
    z-index reading-panel-z
    padding 0px 8px 8px 8px

    &.opened
        right 0

    &.opened-medium
        right 0
        width 40%

    &.opened-wide
        right 0
        width 60%

    & > .reading-panel-tab
        width auto
        height -webkit-calc( 100% - 75px )
        min-height -webkit-calc( 100% - 75px )
        height calc( 100% - 75px )
        min-height calc( 100% - 75px )

    & > .reading-panel-tab > .cke
        border 0px
        height 100%

        & > .cke_inner
            height 100%
            display table

            & > .cke_top
                padding 6px

            & > .cke_contents
                height 100% !important
                display table-row

                & > .cke_wysiwyg_frame
                    width 100% !important
    
    &.dragging-slide
        right -@width

    & #reading-scrolling-tab
        overflow-y scroll

#reading-panel.editmode

    & #reading-scrolling-tab
        overflow-y visible


.cke_bottom
    display none !important

// these are the styles ckeditor applies by default in contents.css, see http://i.imgur.com/Hmu0kdW.gif
// the font is !important because we have * rule that overrides it (but does not apply to ckeditor iframe)
.slide-div
    font-size 13px
    line-height 1.6
    font-family sans-serif,Arial,Verdana,"Trebuchet MS" !important
    color #333
    margin 0px 20px 40px 20px


#drag-modal
    position absolute
    width 200%
    height 200%
    display none


        
