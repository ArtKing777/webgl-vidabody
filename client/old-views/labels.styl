

#labels
    opacity 0
    
body.maximized_app #labels
    opacity 1
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden
    pointer-events none

.label3d
    position absolute
    opacity 0
    font-family 'Roboto Condensed', Verdana, sans-serif
    color label-color
    text-shadow 02px 0px 1px #000, -2px 0px 1px #000,0px 02px 1px #000,1px -2px 1px #000
    font-size 24px
    //pointer-events all !important
    pointer-events none
    transition-props 0.2s opacity
    -moz-user-select none
    -webkit-user-select none
    -ms-user-select none
    user-select none

    padding 3px 15px 6px 15px
    line-height 0.9
    //&:hover
    &.hover
        text-shadow 2.5px 2.5px 3px rgba(0,0,0,255)
        border-radius 100px
        border3d 0.3
        box-shadow soft-shadow
        background-color hbc

    &.success
        color green
    &.fail
        color red
    &.hide
        background url(quiz.png) center no-repeat
        background-size 100px
        width 128px
        height 128px
        pointer-events all
        
.label3dpart
    font-size 36px
    color label-color
    pointer-events none

.has-quiz-box
    z-index 1
    