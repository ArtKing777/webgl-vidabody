.tutorial-balloon
    width 100%
    height 100%
    
.landing .tutorial-balloon
    display: none

.tutorial-balloon .body
    z-index 10000001
    position absolute
    color #333333
    text-shadow 0px 1px 0px rgba(255,255,255,1)
    max-height 32px
    min-height 32px
    height auto
    width 32px
    border-radius 32px
    border solid highlight-color 4px
    background rgba(113, 160, 194, 0.3)
    -webkit-animation-name jingle
    -webkit-animation-duration 0.8s
    -webkit-animation-iteration-count infinite
    -webkit-animation-timing-function linear
    box-shadow soft-shadow
    opacity 1
    transition-props 0.3s (opacity border border-radius background max-height min-height width)
    overflow hidden
    pointer-events all
    *
        opacity 0
        pointer-events none
        
    .title
        margin 10px
        font-size 20px
        position relative
        text-align center
        
    .content
        margin 10px
        font-size 15px
        position relative
        padding 10px
        overflow hidden
        height auto
        text-align center
        //background darken(panel-color, 30%)
        //border-radius r
        //box-shadow inset-soft-shadow
    .close
        width 180px
        margin auto
        background #eeee
        color #333333
        margin-bottom 20px
        &:hover
            box-shadow hard-shadow
    label
        font-size 14px
        padding 10px
        position relative
        top -3px
        
    #stop_tutorials
        margin 10px 0 10px 10px
    
    
            
    &:hover
        min-height 80px
        max-height 600px
        width 300px
        border-radius r*2
        border none
        background #eeee
        -webkit-animation none


        *
            -webkit-animation-duration 0s
            pointer-events all
            opacity 1
        
    &.hidden
        opacity 0
        pointer-events none
