

.popup_menu_modal
    display block
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background none
    cursor default
    z-index 1000000
.popup_menu
    font-size 13px
    min-width 100px
    border-radius r
    display block
    position absolute
    padding 10px 0
    background contextual-menu-color
    box-shadow soft-shadow
    border3d(0.3)
    color white
    text-shadow text-shadow
    z-index 1000001

    &.popping
        -transform scale(1,1)

.menu
    > .item
        //white-space nowrap
        list-style none
        padding 4px 10px
        position relative
        width 100%
        color white
        text-shadow text-shadow
        word-break: break-word;
        background url(transition_ico.png) 5px 0px no-repeat
        text-align left
        border none
        border-radius r
        background-color transparent
        box-shadow 0px 0px 0px rgba(0,0,0,0)
        // This is replaced by 1px border in border3d
        border-top 1px solid rgba(0,0,0,0)
        pointer-events all
        &.icon
            padding-left 40px

        &.icon16
            background-size 16px
            background-position 15px 3px;

        &.icon32
            background-position-y -4px

        > .action
            position absolute
            padding 0
            top 3px
            right 10px
            display inline-block
            list-style none
            width 20px
            height 20px
            background url(transition_ico.png) 1px center no-repeat
            background-size 20px
            margin 0
            
        > .submenu
            position relative
            transition-props 0.5s (background box-shadow)
            pointer-events none
            padding 0
            overflow hidden
            &.unfolded
                background sub-menu-color
                box-shadow inset-soft-shadow
                border3d(0.3, true, true, 1px, true)
                border-radius r
            
        > .item_name
            padding-left 10px
            padding-right 30px
            margin-bottom 5px
        &:hover
            background-color selected !important
            box-shadow soft-shadow
            color white
        &.unfolded
            &:hover
                background-color transparent !important
                box-shadow none
            > span:hover
                background-color selected !important
                box-shadow soft-shadow
                
        &.organ
            cursor default
            padding-left 4px
            padding-right 4px
            font-size 12px
            background url(transition_ico.png) 10px 8px no-repeat
            &.disable >.item_name
                opacity 0.5
            .item_name
                padding-left 20px
        &.disabled
            opacity 0.5
            pointer-events none
            

.popup_menu >.item.submenu
    display block
    &:after
        position absolute
        content "\25B6"
        right 10px


        
scale = 1
.slider
    min-width 150px
    width 100%
    height 30px
    color white
    font-size 13px
    text-shadow text-shadow
    &.disabled
        opacity 0.5
        pointer-events none
        .sensor
            pointer-events none !important
    .value-box
        text-align left
        pointer-events none
        position absolute
        top 4px
        overflow hidden
        max-width 95%
        text-overflow ellipsis
        .value
            height 10px
    .sensor
        width 100%
        height 100%
        margin auto
        pointer-events all
        cursor e-resize
        .container
            pointer-events none
            position relative
            width 100%
            height 16px
            top 16px
            background sub-menu-color
            border-radius (r + 2px)
            border3d(0.2, true, true, 1px, true)
            overflow hidden
            box-shadow inset-soft-shadow

            .progress
                position absolute
                border-radius r
                background lighten(panel-color, 80%)
                height 14px
                width 60%
                left 0
                top 0px
                box-shadow hard-shadow
.text_input_item
    &.icon
        background url("transition_ico.png") 10px 15px no-repeat
        input
            padding-left: 25px

    input
        color white
        width: -webkit-calc( 100% + 40px )
        width: calc( 100% + 40px )
        height: 30px
        border none
        pointer-events all
        padding-right: 22px
        margin-left: -35px
        background-color transparent
        &:focus
            background-color sub-menu-color
            border-radius 3px
            border3d(0.2, true, true, 1px, true)
            box-shadow inset-soft-shadow

    img
        position absolute
        right 13px
        top 12px
        width 15px
        height 15px
        opacity 0
        cursor pointer
        pointer-events none
        transition-props 0.5s (opacity)
        &.show_clear_button
            opacity 1
            pointer-events all
    
.switch
    width 100%
    height 30px
    color white
    text-shadow text-shadow
    cursor pointer
    pointer-events all
    
    .container
        pointer-events none
        position absolute
        width 18%
        height 50%
        top 25%
        border-radius 100px
        border3d(0.2, true, true, 1px, true)
        overflow hidden
            
        .button
            background: highlight-color;
            background: -moz-linear-gradient(left, highlight-color 0%, highlight-color 50%, sub-menu-color 50%, sub-menu-color 100%);
            background: -webkit-gradient(linear, left top, right top, color-stop(0%,highlight-color), color-stop(50%,highlight-color), color-stop(50%,sub-menu-color), color-stop(100%,sub-menu-color));
            background: -webkit-linear-gradient(left, highlight-color 0%,highlight-color 50%,sub-menu-color 50%,sub-menu-color 100%);
            background: -o-linear-gradient(left, highlight-color 0%,highlight-color 50%,sub-menu-color 50%,sub-menu-color 100%);
            width 150%
            height 100%
            box-shadow inset 0px 0px 4px rgba(0,0,0,0.5)
            .handle
                width 33.3333%
                height 100%
                margin-left 33.3333%
                background rgba(186, 186, 186, 1)
                box-shadow 0px 0px 2px rgba(0,0,0,0.3)
                border-radius 100px
                border3d(0.5)
    
    .text
        padding-left 30%
        padding-right 15px
        font-size 13px
        padding-top 4px
        white-space nowrap
        pointer-events none

.switch.non-labeled .container
    width 100%
    height 65%

.popup_menu .switch .container
    min-width 30px
    min-height 15px


        
    
