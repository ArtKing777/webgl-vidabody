.error_screen
	position absolute
	top -webkit-calc(50% - 75px)
	top calc(50% - 75px)
	left 20%
	width 60%
	height 150px
	white-space nowrap
	text-align center
	text-shadow text-shadow
	&.hidden
		display none
	& img
		margin-right 30px
	& .message
		display inline-block
		vertical-align top
		margin-top 30px
		color white
		text-align left
		white-space normal
		margin-right 150px
		& .buttons
			white-space nowrap
			margin-top 30px

