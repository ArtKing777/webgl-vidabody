


#tour-name
    position absolute
    font-size 22px
    text-align right
    top 21px
    right 40px
    color yellow
    font-style italic
    text-shadow small-shadow
    pointer-events none

.landing #tour-name
    top: 85px;
    

#tour-slide-number
    font-size 15px
    position absolute
    text-align right
    top 54px
    right 40px
    color white
    text-shadow small-shadow
    
    border 1px solid transparent
    box-shadow 0px 0px 0px rgba(0,0,0,0)
    transition-props 0.5s (box-shadow background-color border)
    
    &:hover
        background-color lighten(panel-color, 50%)
        box-shadow soft-shadow
        border3d 0.5

.landing #tour-slide-number
    top: 110px

#tour-viewer-controls
    position absolute
    bottom 60px
    width 180px
    right 40px
    padding 0
    white-space nowrap
    margin 0 auto
    font-size 0
    height 50px
    
    &.old_pos
        bottom 40px
        width 300px
        left -webkit-calc(50% - 150px)
        left calc(50% - 150px)
        right auto

    *
        bottom 0
        font-size 12px

        width 33.3333%
        height 100%
        display inline-block
        padding 0
        margin 0
        cursor pointer
        transition-props 0.5s (opacity)
    
.landing #tour-viewer-controls
    right: 50%
    transform: translateX(50%)

#auto-toggle
    position absolute
    bottom 20px
    font-size 11px
    text-align left
    width 130px
    right 64px
    // margin-left (@width/-2)
    background none no-repeat center left
    /* background-size 30px */
    padding-left 35px
    border 1px solid transparent
    box-shadow 0px 0px 0px rgba(0,0,0,0)
    transition-props 0.5s (box-shadow background-color border)
    
    &.old_pos
        bottom 10px
        left 50%
        margin-left (@width/-2)
    
    &:hover
        background-color lighten(panel-color, 50%)
        box-shadow soft-shadow
        border3d 0.5

.landing #auto-toggle
    right: 50%
    transform: translateX(50%)

#loading-slide
    position absolute
    bottom 20px
    width 100%
    text-align center
    font-size 30px
    color white
    text-shadow soft-shadow
    opacity 0
    pointer-events none
    
    &.enabled
        animation loading-fadein 1s linear forwards
        
@keyframes loading-fadein
    0%
        opacity 0
    50%
        opacity 0
    100%
        opacity 1


#tour-position
    position absolute
    color white
    bottom 10px
    left 50%
    width 80px
    margin-left -40px
    text-align center
    cursor pointer
    text-shadow small-shadow

#tour-position-input
    width 30px
    /* margin-left -15px */

#tour-position-input-feedback
    position absolute
    right 0
    color #ddd
    font-size 12px
    padding-top 22px
    width 400px
    text-align right
    pointer-events none

#annotations
    position absolute
    width 50vh
    height 50vh
    top 50%
    left 50%
    pointer-events none
    
    & > *
        pointer-events all
        background-size contain !important
        
    & [contentEditable], & > p
        text-align center
        font-size 3vh
        font-family 'Roboto', sans-serif
        font-weight normal
        text-shadow soft-text-shadow-2
        margin 0
        
    & > p  // annotations in playback mode
        font-size 3vh
        position absolute
        width 100% height 100%
        pointer-events none
        padding 1.5vh
        text-shadow soft-text-shadow-2
        color white
        
        &.shadow
            box-shadow 0px 0px 20px rgba(0,0,0,0.5)

        
.annotation_shadow p
    text-shadow soft-text-shadow-2
